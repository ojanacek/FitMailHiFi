<Application x:Class="FitMailHiFi.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
         
        <Style x:Key="EmailFolderButton" TargetType="Button">
            <Setter Property="Margin" Value="0, 5, 0, 0" />
        </Style>
        
        <Style x:Key="ContentPanel" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0, 10, 0, 0" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
        
        <Style x:Key="OpenContactsButton" TargetType="Button">
            <Setter Property="Margin" Value="5, 0, 0, 0" />
            <Setter Property="ToolTip" Value="Vybrat kontakty z adresáře" />
            <Setter Property="Content" Value="Adresář" />
        </Style>

        <Style x:Key="EmailDetailBox" TargetType="TextBox">
            <Setter Property="Width" Value="300" />
            <Setter Property="IsReadOnly" Value="True" />
        </Style>

    </Application.Resources>
</Application>
